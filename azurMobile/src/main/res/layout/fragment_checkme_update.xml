<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/FragmentCheckmeUpdateImgCloud"
        android:layout_width="180dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/cloud" />

    <ImageView
        android:id="@+id/FragmentCheckmeUpdateImgWriting"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/writing" 
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/FragmentCheckmeUpdatePro"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FragmentCheckmeUpdateImgCloud"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
    
    <TextView 
        android:id="@+id/FragmentCheckmeUpdateTextState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/default_bkg"
        android:layout_marginTop="10dp"
        android:text="@string/downloading"
        android:layout_below="@id/FragmentCheckmeUpdatePro"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>