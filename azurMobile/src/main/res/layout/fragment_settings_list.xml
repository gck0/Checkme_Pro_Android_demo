<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ListBkg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ListBkg"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/lin_cloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/cloud_title"
                android:textColor="@color/default_bkg"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/lin_email"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_shape"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/prompt_email"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:background="@null"
                    android:focusableInTouchMode="true"
                    android:hint="@string/email_hint"
                    android:inputType="textEmailAddress"
                    android:paddingRight="5dp"
                    android:selectAllOnFocus="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_password"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_shape"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/prompt_password"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:background="@null"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:paddingRight="5dp"
                    android:selectAllOnFocus="true"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_sign_in"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/default_bkg"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/White"/>

            <LinearLayout
                android:id="@+id/lin_creat_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_account"/>

                <TextView
                    android:id="@+id/tv_creat_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="@string/cloud_title"
                    android:textColor="@color/default_bkg"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hi"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="@string/cloud_title"
                    android:textColor="@color/default_bkg"
                    android:textSize="16sp"/>
            </LinearLayout>

<!--            <RelativeLayout
                android:id="@+id/rl_auto_sync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_auto_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/auto_sync"/>

                <Switch
                    android:id="@+id/st_auto_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_manual_sync"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/default_bkg"
                android:text="@string/manual_sync"
                android:textAllCaps="false"
                android:textColor="@color/White"/>-->

            <Button
                android:id="@+id/btn_sign_out"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/button_red"
                android:text="@string/sign_out"
                android:textAllCaps="false"
                android:textColor="@color/White"/>

            <TextView
                android:id="@+id/tv_delete_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/delete_account"
                android:autoLink="all"
                android:textColor="@color/default_bkg"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_access_cloud"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/default_bkg"
                android:text="@string/access_cloud_in_browser"
                android:textAllCaps="false"
                android:textColor="@color/White"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/SettingsListReDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin_cloud"
            android:background="@drawable/list_item_bkg"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/SettingsListImgDevice"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/checkme"/>

            <TextView
                android:id="@+id/SettingsListTextDeviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Checkme 6000"
                android:textSize="22sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/SettingsListImgDevice"
                android:layout_marginStart="16dp"/>

            <ImageView
                android:id="@+id/SettingsListImgDeviceEnter"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/enter1"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/SettingsListReUnit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/SettingsListReDevice"
            android:layout_marginTop="10dp"
            android:background="@drawable/list_item_bkg"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/SettingsListTextUinitTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/unit"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <com.viatom.azur.widget.SegmentedRadioGroup
                android:id="@+id/SettingsListUnitSegGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checkedButton="@+id/SettingsListBnMetric"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@id/SettingsListBnMetric"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/metric"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@drawable/radio_colors"
                    android:textSize="12sp"/>

                <RadioButton
                    android:id="@+id/SettingsListBnBritsh"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/british"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@drawable/radio_colors"
                    android:textSize="12sp"/>
            </com.viatom.azur.widget.SegmentedRadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/SettingsListReTermometer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/SettingsListReUnit"
            android:layout_marginTop="10dp"
            android:background="@drawable/list_item_bkg"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/SettingsListTextTermometerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/title_temp"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <com.viatom.azur.widget.SegmentedRadioGroup
                android:id="@+id/SettingsListThermometerSegGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checkedButton="@+id/SettingsListBnC"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@id/SettingsListBnC"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:button="@null"
                    android:gravity="center"
                    android:text="  ℃  "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@drawable/radio_colors"/>

                <RadioButton
                    android:id="@+id/SettingsListBnF"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:button="@null"
                    android:gravity="center"
                    android:text="  ℉  "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@drawable/radio_colors"/>
            </com.viatom.azur.widget.SegmentedRadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Settingsclear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/SettingsListReTermometer"
            android:layout_marginTop="10dp"
            android:background="@drawable/list_item_bkg"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/SettingsclearTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/clearname"
                android:textSize="20sp"
                android:textStyle="bold"/>


        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
